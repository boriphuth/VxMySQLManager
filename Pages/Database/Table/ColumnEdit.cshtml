@page
@model Database.Table.ColumnEdit

@{
    Layout = "_DatabaseLayout";
    ViewData["Page"] = "Column Edit";
    ViewData["Database"] = Model.DatabaseName;
    ViewData["Table"] = Model.TableName;
}


<form method="post">
    <div class="field">
        <label class="label">Column Name</label>
        <div class="control">
            <input asp-for="@Model.ColumnName" class="input">
            <span asp-validation-for="@Model.ColumnName"></span>
        </div>
    </div>
    
    <div class="field">
        <label class="label">Column Type</label>
        <div class="control">
            <input asp-for="@Model.DataType" class="input">
            <span asp-validation-for="@Model.DataType"></span>
        </div>
    </div>
    
    <div class="field">
        <label class="label">Max Length</label>
        <div class="control">
            <input asp-for="@Model.MaxLength" class="input">
            <span asp-validation-for="@Model.MaxLength"></span>
        </div>
    </div>
    
    <div class="field">
        <label class="label">Numeric Precision</label>
        <div class="control">
            <input asp-for="@Model.NumericPrecision" class="input">
            <span asp-validation-for="@Model.NumericPrecision"></span>
        </div>
    </div>
    
    <div class="field">
        <label class="label">Numeric Scale</label>
        <div class="control">
            <input asp-for="@Model.NumericScale" class="input">
            <span asp-validation-for="@Model.NumericScale"></span>
        </div>
    </div>
    
    <div class="field">
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="@Model.IsNullable">
                Nullable
            </label>
        </div>
    </div>
    
    <div class="field">
        <div class="control">
            <label class="checkbox">
                <input type="checkbox">
                Auto Increment
            </label>
        </div>
    </div>
    
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-success is-small" type="submit">
                Save
            </button>
        </div>
        <div class="control">
            <button class="button is-small" type="reset">
                Reset
            </button>
        </div>
    </div>
</form>
